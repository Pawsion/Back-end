generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model pet {
  idPet             Int           @id
  name              String        @db.VarChar(45)
  type              String        @db.VarChar(45)
  breed             String        @db.VarChar(45)
  age               Int
  gender            String        @db.VarChar(45)
  veterinaryContact String        @db.VarChar(45)
  User_idUser       Int
  information       Json
  user              user          @relation(fields: [User_idUser], references: [idUser], onDelete: NoAction, onUpdate: NoAction, map: "fk_Pet_User")
  reservation       reservation[]

  @@index([User_idUser], map: "fk_Pet_User_idx")
}

model pethotel {
  idPetHotel   Int           @id @default(autoincrement())
  name         String        @db.VarChar(255)
  phoneNumber  String        @db.VarChar(20)
  email        String        @db.VarChar(255)
  location     String        @db.VarChar(255)
  workingHours String        @db.VarChar(255)
  reservation  reservation[]
  review       review[]
  term         term[]
}

model reservation {
  idReservation       Int       @id
  startDate           DateTime? @db.Date
  endDate             DateTime? @db.Date
  status              Int?      @db.TinyInt
  Pet_idPet           Int
  User_idUser         Int
  PetHotel_idPetHotel Int
  pet                 pet       @relation(fields: [Pet_idPet], references: [idPet], onDelete: NoAction, onUpdate: NoAction, map: "fk_Reservation_Pet1")
  pethotel            pethotel  @relation(fields: [PetHotel_idPetHotel], references: [idPetHotel], onDelete: NoAction, onUpdate: NoAction, map: "fk_Reservation_PetHotel1")
  user                user      @relation(fields: [User_idUser], references: [idUser], onDelete: NoAction, onUpdate: NoAction, map: "fk_Reservation_User1")

  @@index([Pet_idPet], map: "fk_Reservation_Pet1_idx")
  @@index([PetHotel_idPetHotel], map: "fk_Reservation_PetHotel1_idx")
  @@index([User_idUser], map: "fk_Reservation_User1_idx")
}

model review {
  idReview            Int      @id @default(autoincrement())
  rating              Int
  comment             String?  @db.VarChar(255)
  date                DateTime @db.Date
  User_idUser         Int
  PetHotel_idPetHotel Int
  pethotel            pethotel @relation(fields: [PetHotel_idPetHotel], references: [idPetHotel], onDelete: NoAction, onUpdate: NoAction, map: "fk_Review_PetHotel1")
  user                user     @relation(fields: [User_idUser], references: [idUser], onDelete: NoAction, onUpdate: NoAction, map: "fk_Review_User1")

  @@index([PetHotel_idPetHotel], map: "fk_Review_PetHotel1_idx")
  @@index([User_idUser], map: "fk_Review_User1_idx")
}

model term {
  idTerm              Int      @id @default(autoincrement())
  admissionDate       DateTime @db.Date
  releaseDate         DateTime @db.Date
  PetHotel_idPetHotel Int
  price               Decimal  @db.Decimal(10, 0)
  pethotel            pethotel @relation(fields: [PetHotel_idPetHotel], references: [idPetHotel], onDelete: NoAction, onUpdate: NoAction, map: "fk_Term_PetHotel1")

  @@index([PetHotel_idPetHotel], map: "fk_Term_PetHotel1_idx")
}

model user {
  idUser      Int           @id @default(autoincrement())
  firstName   String        @db.VarChar(45)
  lastName    String        @db.VarChar(45)
  phoneNumber String        @db.VarChar(45)
  email       String        @db.VarChar(45)
  password    String?       @db.VarChar(45)
  pet         pet[]
  reservation reservation[]
  review      review[]
}
